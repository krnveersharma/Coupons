    "paths": {
        "/coupon/add": {
            "post": {
                "description": "Adds a coupon to the system",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Coupon"
                ],
                "summary": "Add a new coupon",
                "parameters": [
                    {
                        "description": "Coupon data",
                        "name": "coupon",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.CouponSwagger"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/coupon/applicable": {
            "post": {
                "description": "Returns applicable coupons based on cart data",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "coupons"
                ],
                "summary": "Get applicable coupons",
                "parameters": [
                    {
                        "description": "Request data",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/requestschemas.RequestCoupons"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/requestschemas.CouponsResult"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/coupon/validate": {
            "post": {
                "description": "Validates coupon for cart and returns applicable discounts",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "coupons"
                ],
                "summary": "Validate a coupon",
                "parameters": [
                    {
                        "description": "Validation data",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/requestschemas.ValidaTeCouponData"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/products": {
            "get": {
                "description": "Fetch all products from the database",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "products"
                ],
                "summary": "Get all products",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/models.Product"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "post": {
                "description": "Add a product with id, name, category and price",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "products"
                ],
                "summary": "Add a new product",
                "parameters": [
                    {
                        "description": "Product Info",
                        "name": "product",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.Product"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.CouponSwagger": {
            "type": "object",
            "properties": {
                "applicable_categories": {
                    "description": "Categories the coupon applies to",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "applicable_medicine_ids": {
                    "description": "IDs of applicable medicines",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "coupon_code": {
                    "description": "Coupon code (must be unique)",
                    "type": "string"
                },
                "discount_target": {
                    "description": "Discount target (inventory, charges)",
                    "allOf": [
                        {
                            "$ref": "#/definitions/models.DiscountTarget"
                        }
                    ]
                },
                "discount_type": {
                    "description": "Type of discount (percentage, flat)",
                    "allOf": [
                        {
                            "$ref": "#/definitions/models.DiscountType"
                        }
                    ]
                },
                "discount_value": {
                    "description": "Value of the discount",
                    "type": "number"
                },
                "expiry_date": {
                    "description": "Expiry date of the coupon",
                    "type": "string"
                },
                "max_usage_per_user": {
                    "description": "Maximum usage allowed per user",
                    "type": "integer"
                },
                "min_order_value": {
                    "description": "Minimum order value required for the coupon",
                    "type": "number"
                },
                "terms_and_conditions": {
                    "description": "Terms and conditions of the coupon",
                    "type": "string"
                },
                "usage_type": {
                    "description": "Usage type of the coupon (one_time, multi_use, time_based)",
                    "allOf": [
                        {
                            "$ref": "#/definitions/models.UsageType"
                        }
                    ]
                },
                "valid_time_window": {
                    "description": "Valid time window for the coupon (e.g. \"10:00-18:00\")",
                    "type": "string"
                }
            }
        },
        "models.DiscountTarget": {
            "type": "string",
            "enum": [
                "inventory",
                "charges"
            ],
            "x-enum-varnames": [
                "DiscountInventory",
                "DiscountCharges"
            ]
        },
        "models.DiscountType": {
            "type": "string",
            "enum": [
                "percentage",
                "flat"
            ],
            "x-enum-varnames": [
                "DiscountPercentage",
                "DiscountFlat"
            ]
        },
        "models.Product": {
            "type": "object",
            "properties": {
                "category": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "price": {
                    "type": "integer"
                }
            }
        },
        "models.UsageType": {
            "type": "string",
            "enum": [
                "one_time",
                "multi_use",
                "time_based"
            ],
            "x-enum-varnames": [
                "UsageTypeOneTime",
                "UsageTypeMultiUse",
                "UsageTypeTimeBased"
            ]
        },
        "requestschemas.CouponsResult": {
            "type": "object",
            "properties": {
                "categories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "coupon_code": {
                    "type": "string"
                },
                "discount_type": {
                    "type": "string"
                },
                "discount_value": {
                    "type": "number"
                }
            }
        },
        "requestschemas.ProductInfo": {
            "type": "object",
            "properties": {
                "category": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                }
            }
        },
        "requestschemas.RequestCoupons": {
            "type": "object",
            "properties": {
                "cart_items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/requestschemas.ProductInfo"
                    }
                },
                "timestamp": {
                    "type": "string"
                }
            }
        },
        "requestschemas.ValidaTeCouponData": {
            "type": "object",
            "properties": {
                "cart_items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/requestschemas.ProductInfo"
                    }
                },
                "coupon_code": {
                    "type": "string"
                },
                "timestamp": {
                    "type": "string"
                }
            }
        }
    }
}